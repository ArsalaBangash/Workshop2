<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="24dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/contact_card_sentiment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toBottomOf="@id/contact_card_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/contact_card_name" />


        <TextView
            android:id="@+id/contact_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/contact_card_sentiment"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/contact_card_phone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toBottomOf="@id/contact_card_phone_number"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/contact_card_phone_number" />

        <TextView
            android:id="@+id/contact_card_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/contact_card_phone_icon"
            app:layout_constraintTop_toBottomOf="@id/contact_card_name" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>



